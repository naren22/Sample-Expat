<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Claim Upload"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"/>
        <items jcr:primaryType="nt:unstructured">
            <instruction
                jcr:primaryType="nt:unstructured"
                jcr:title="Instructions"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <menuLinkTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Main Heading"
                                fieldLabel="Main Heading"
                                key="mainHeading"
                                maxlength="50"
                                name="./mainHeading"/>
                            <subheading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Sub Heading"
                                fieldLabel="Sub Heading"
                                key="subHeading"
                                maxlength="50"
                                name="./subHeading"/>
                            <desctext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Description Text"
                                fieldLabel="Description Text"
                                key="desc"
                                maxlength="150"
                                name="./desc"/>
                            <menuSubLinks
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                eaem-show-on-collapse="EAEM.showProductName"
                                fieldLabel="Instruction List">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./instructionList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <listitem
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldDescription="Input text to appear in list. Max 100 chars"
                                                    fieldLabel="List Text"
                                                    key="listItem"
                                                    maxlength="100"
                                                    name="./listItem"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </menuSubLinks>
                        </items>
                    </columns>
                </items>
            </instruction>
            <file
                jcr:primaryType="nt:unstructured"
                jcr:title="Upload File Configuration"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fileuploadtext
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Upload Text"
                                fieldLabel="Upload Text"
                                key="uploadText"
                                maxlength="250"
                                name="./uploadText"/>
                            <attest
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="Attest Text"
                                fieldLabel="Attest Text"
                                key="attestText"
                                maxlength="250"
                                name="./attestText"/>
                        </items>
                    </columns>
                </items>
            </file>
        </items>
    </content>
</jcr:root>
